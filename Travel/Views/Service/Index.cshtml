@model IEnumerable<Travel.Models.Service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.serv_header)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.serv_content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.serv_icons)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.serv_header)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.serv_content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.serv_icons)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.service_id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Details", "Details", new { id = item.service_id }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id = item.service_id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
