@model Travel.ViewModel.MyModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="container" style="background-color:aliceblue">

        <form class="form-horizontal" action='~/Profile/Edit/@Model._user[0].user_id' method="post">
            <fieldset>
                <div class="row">
                    <div class="col-md-6">
                        <div class="control-group">
                            <!-- Username -->
                            <label class="control-label" for="username">Ad , Soyad</label>
                            <div class="controls">
                                <input type="text" id="username" name="user_full_name" placeholder="" value="@Model._user[0].user_full_name" class="input-xlarge">
                                <p class="help-block">Bir ad soyad qeyd edin.</p>
                            </div>
                        </div>

                        <div class="control-group">
                            <!-- E-mail -->
                            <label class="control-label" for="email">E-mail</label>
                            <div class="controls">
                                <input type="text" id="email" name="user_email" value="@Model._user[0].user_email" class="input-xlarge">
                                <p class="help-block">Bir email qeyd edin</p>
                            </div>
                        </div>

                        <div class="control-group">
                            <!-- Password-->
                            <label class="control-label" for="password">Elaqe nomresi</label>
                            <div class="controls">
                                <input type="text" id="password" name="user_phone" value="@Model._user[0].user_phone" class="input-xlarge">
                                <p class="help-block">bir elaqe nomresi qeyd edin</p>
                            </div>
                        </div>

                        <div class="control-group">
                            <!-- Password -->
                            <label class="control-label" for="password_confirm">Seher</label>
                            <div class="controls">
                                <input type="text" id="password_confirm" name="user_city" value="@Model._user[0].user_city" class="input-xlarge">
                                <p class="help-block">Yasayis unvani qeyd edin</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="control-group">
                            <!-- Password -->
                            <label class="control-label" for="password_confirm">Sekil</label>
                            <div class="controls">
                                <input type="file" id="password_confirm" name="user_img" value="@Model._user[0].user_img" class="input-xlarge">
                                <p class="help-block">Seklinizi yerlesdirin /p>
                            </div>
                        </div>
                        <div class="control-group">
                            <!-- Password -->
                            <label class="control-label" for="password_confirm">Masin Modeli</label>
                            <div class="controls">
                                <input type="text" id="password_confirm" name="user_car_model" value="@Model._user[0].user_car_model" class="input-xlarge">
                                <p class="help-block">Masin model qeyd edin</p>
                            </div>
                        </div>

                        <div class="control-group">
                            <!-- Password -->
                            <label class="control-label" for="password_confirm">Masin Markasi</label>
                            <div class="controls">
                                <input type="text" id="password_confirm" name="user_car_marka" value="@Model._user[0].user_car_marka" class="input-xlarge">
                                <p class="help-block">Masin markasi qeyd edin</p>
                            </div>
                        </div>
                        <div class="control-group">
                            <!-- Button -->
                            <div class="controls">

                                <button class="btn btn-success">Saxla</button>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </form>

    
</div>